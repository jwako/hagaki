<div class="row">
<div class="col-lg-12">
  <div class="portlet portlet-default">
    <div class="portlet-body">
    <%= form_for @message, :url => x_notifications_path, html: { multipart: true } do |f| %>
      <%= render "common/error", object: @message %>
      <div class="form-group">
        <%= f.text_area :text, class: "form-control", rows: 10, placeholder: "メッセージを入力してください" %>
      </div>
      <div class="form-group">
        <%= select_tag :reply_to, options_for_select(User.options_for_select), 
              {prompt: "返信先を選択してください", class: "form-control"} %>
      </div>
      <%= f.submit "登録", data: { disable_with: "送信中" }, class: "btn btn-lg btn-block btn-primary" %>
    <% end %>
    <div class="clearfix"></div>
    </div>
  </div>
</div>
</div>