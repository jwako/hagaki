 <div class="row">
  <div class="col-md-12">
    <div class="box">
    <div class="box-header">
    <h3 class="box-title">メッセージ一覧</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
    	<div class="row">
	    	<div class="col-md-6">
	  	  <%= image_tag(@message.message.url, class: "img-responsive", alt: "message") %>
	  	  </div>
	  	  <div class="col-md-6">
	  	  	<div class="row">
			  		<div class="col-md-12">
							<%= search_form_for @q, url: edit_x_message_path(@message) do |f| %>
							<div class="input-group input-group-lg">
								<%= f.text_field :name_or_address_cont, placeholder: "氏名もしくは住所", class: "form-control" %>
						    <span class="input-group-btn">
						    	<%= button_tag(type: 'submit', class: 'btn btn-default', name: nil) do %>
										<i class="fa fa-search"></i>
									<% end %>
						    </span>
						  </div>
						  <% end %>
					  </div>
			    </div>
					<br>
		<%= form_tag connect_x_message_path(@message) do %>
		      <table class="table table-striped">
		      <tr>
		      	<th class="col-lg-1 text-center"></th>
		        <th class="col-lg-2 text-center">氏名</th>
		        <th class="col-lg-4 text-center">現住所</th>
		        <th class="col-lg-3 text-center">旧住所</th>
		        <th class="col-lg-2 text-center">Email</th>
		      </tr>
		      <% @users.each do |user| %>
		      <tr>
		      	<td class="text-left">
				      <div class="checkbox">
		            <label><%= check_box_tag "user_ids[]", user.id %></label>
		          </div>
		      	</td>
		        <td class="text-left"><%= user.name %></td>
		        <td class="text-left">〒<%= user.zipcode %> <%= user.address %></td>
		        <td class="text-left"><%= user.old_address %></td>
		        <td class="text-left"><%= user.email %></td>
		      </tr>
		      <% end %>
		      </table>
		    </div>
	  	</div>
	    <br>
		  <div class="row">
		    <div class="col-xs-12">
		      <%= submit_tag "チェックした方々に送信する", class: 'btn btn-lg btn-block btn-primary', :name => nil %>
		    </div>
		  </div>
		<% end %>
    </div><!-- /.box-body -->
    <div class="box-footer clearfix">
    	
    </div>
    </div>
  </div>
</div>